const express = require('express');
const router = express.Router();
const proyectoController = require('../controllers/proyectoController');

// Endpoints del CRUD usando el controlador
router.post('/crearProyecto', proyectoController.crearProyecto);
router.get('/listarProyectos', proyectoController.listarProyectos);
router.get('/:id', proyectoController.obtenerProyecto);
router.put('/:id', proyectoController.actualizarProyecto);
router.delete('/:id', proyectoController.eliminarProyecto);

module.exports = router;

